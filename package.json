{
  "name": "tsx",
  "version": "0.0.0-semantic-release",
  "description": "TypeScript Execute (tsx): Node.js enhanced with esbuild to run TypeScript & ESM files",
  "keywords": [
    "esbuild",
    "runtime",
    "node",
    "cjs",
    "commonjs",
    "esm",
    "typescript"
  ],
  "license": "MIT",
  "repository": "esbuild-kit/tsx",
  "author": {
    "name": "Hiroki Osame",
    "email": "hiroki.osame@gmail.com"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/loader.js",
    "./cli": "./dist/cli.js",
    "./suppress-warnings": "./dist/suppress-warnings.cjs",
    "./preflight": "./dist/preflight.cjs",
    "./repl": "./dist/repl.js"
  },
  "bin": "./dist/cli.js",
  "dependencies": {
    "@esbuild-kit/cjs-loader": "github:esbuild-kit/cjs-loader#npm/ts-file-matcher",
    "@esbuild-kit/core-utils": "^3.0.0",
    "@esbuild-kit/esm-loader": "github:esbuild-kit/esm-loader#npm/ts-file-matcher"
  },
  "optionalDependencies": {
    "fsevents": "~2.3.2"
  }
}